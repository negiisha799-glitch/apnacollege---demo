#include <stdio.h>
int main() {
    int num, temp, reverse = 0, digit;
    printf("Enter a number: ");
    scanf("%d",&num);

    temp = num;

    while (temp > 0) {
        digit = temp % 10;
        reverse = reverse * 10 + digit;
        temp = temp / 10;
    }
    int sum = num + reverse;
    printf("The sum of %d and its reverse %d is %d\n", num, reverse, sum);
    return 0;

}
